<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/l1Contet"
    android:background="#eceff1"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp"
    >

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/recyclerSingleRowImage"
        android:src="@drawable/foodapp"
        android:layout_marginLeft="5dp"
        android:scaleType="centerCrop"
        android:padding="5dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_margin="10dp"
        android:text="List item"
        android:id="@+id/textRecyclerRowItem"
        android:layout_toRightOf="@+id/recyclerSingleRowImage"
        android:paddingLeft="40dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/recyclerSingleRowPrice"
        android:layout_below="@+id/textRecyclerRowItem"
        android:text="$20/person"
        android:drawableLeft="@drawable/ic_dollar"
        android:textSize="15dp"
        android:layout_toRightOf="@+id/recyclerSingleRowImage"
        android:paddingLeft="70dp"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="4.5"
        android:id="@+id/recyclerSingleRowRating"
        android:layout_toRightOf="@+id/recyclerSingleRowImage"
        android:layout_marginLeft="230dp"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/ic_favourite"/>


</RelativeLayout>